<div class="colorwhite">
  <div class="container">
    <h2 class= "title_index">NUESTRAS PIZZAS</h2>
    <P class="subtitle-index">TODAS HECHAS EN CASA CON INGREDIENTES FRESCOS <br>Y MUCHO AMOR</P>

    <div class="pizza_index">
      <%@pizzas.each do |pizza|%>
        <ul><%=pizza.name.upcase%>:
        <%=pizza.price%> <i class="fas fa-euro-sign"></i>
        <%=pizza.ingredients%>.
      </ul>

      <%end%>
      </div>
      <p class="subtitle-index">PIZZAS  AL MOLDE DE MEDIA MASA <br> TE RECOMENDAMOS UN PIZZA PARA DOS PERSONAS</p>
      <div class="image_footer">
      <a href="/">
      <%= cl_image_tag("logo_gpvujf",
      width: 100, height:150, ) %>
      </a>
    </div>
  </div>

<%= simple_form_for [@pizza, @order] do |f| %>

      <%= f.association :pizza %> <%= f.input :t_quantity %>
      <%= f.input :customer_name %>
      <%= f.input :customer_lname %>
      <%= f.input :customer_phone %>
      <%= f.input :customer_mail %>
      <%= f.input :customer_street %>
      <%= f.input :customer_floor %>
      <%= f.input :customer_zip %>
      <%= f.input :comment %>
      <%= f.input :delibery_date %>


      <%= f.submit class: 'btn btn-primary' %>
  <% end %>

</div>

